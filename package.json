{
  "name": "vscode-commons",
  "displayName": "Red Hat Commons",
  "description": "Base utilities for Red Hat extensions. Notably controls Telemetry settings.",
  "version": "0.0.1",
  "publisher": "redhat",
  "segmentWriteKey": "Ga2frlNQ8nsYjF8PEGsbdjhCy3VJdncB",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscodeCommons.clearStateAndSettings",
    "onCommand:vscodeCommons.showTelemetryStatus"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscodeCommons.clearStateAndSettings",
        "title": "Clear context.globalState and VS Code settings"
      },
      {
        "command": "vscodeCommons.showTelemetryStatus",
        "title": "Show Telemetry Status"
      }
    ],
    "configuration": {
      "title": "Red Hat",
      "properties": {
        "redhat.telemetry.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable usage data and errors to be sent to Red Hat servers",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0",
    "tslint": "6.1.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@types/analytics-node": "^3.1.4",
    "analytics-node": "^3.4.0-beta.3"
  }
}
